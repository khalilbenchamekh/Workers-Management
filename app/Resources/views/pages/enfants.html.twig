{% extends 'pagesbase.html.twig' %}
{% block pageContainer %}
    <div class="myrow">
        <div class="contenu_fieldset" style="display: block;">
            <h2 class="panleHead">
                <span>| &nbsp; </span>informations des enfants
            </h2>
            <div class="panlecontainer">
                <div class="panleContainerHead">    
                    <div class="clearfix col-lg-6 updateinfo">
                        {#<a class="btn btn-primary btn-xs"> <i class=" fa fa-plus"></i> Ajouter </a>#}
                    </div>
                </div>
                <table id="table_id"  class="table table-striped table-hover"> 
                    <thead> 
                        <tr> 
                            <th>Nom</th> 
                            <th>Prénom</th>
                            <th>Age</th> 
                            {#<th>Lieu de scolarisation</th> #}
                            <th>Date de debut d'accueil souhaité</th>
                            <th>Actions</th> 
                        </tr> 
                    </thead> 
                    <tbody>
                        {% for enfant in Enfants %}
                            <tr>
                                <th scope="row">{{ enfant.nom }}</th>
                                <td>{{ enfant.prenom }}</td>
                                <td>{{ 'now'|date('Y') - enfant.dateNaissance|date('Y') + ('now'|date('2017-m-d')|date('U') - enfant.dateNaissance|date('2017-m-d')|date('U') >= 0 ? 1 : 0 ) }}</td>
                                {#<td> #}{#{{  Enfants.lieuscolarisation.lieuscolarisation }}#}{#</td>#}
                                <td>{{ enfant.dateDebutAccueilSouhaite|date("d/m/Y") }}</td>
                                <td>
                                    {% if parameters.3.allowUpdate %}
                                        <a href="{{ path('edit_enfant' , { 'id' : enfant.id}) }}" class="btnactions">
                                            <span class="fa-stack fa-lg" data-toggle="tooltip" data-placement="top" title="Modifier" >
                                                <i class="fa fa-square-o fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x"></i>
                                            </span>
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('show_enfant' , { 'id' : enfant.id } ) }}" class="btnactions">
                                        <span class="fa-stack fa-lg" data-toggle="tooltip" data-placement="top" title="Afficher">
                                            <i class="fa fa-square-o fa-stack-2x"></i>
                                            <i class="fa fa-eye fa-stack-1x"></i>
                                        </span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>   
                </table>
            </div>
        </div>
    </div>
{% endblock %}