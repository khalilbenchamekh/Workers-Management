{% extends 'pagesbase.html.twig' %}
{% block pageContainer %}
    <div class="myrow">
        <div class="contenu_fieldset" style="display: block;">
            <h2 class="panleHead">
                <span>| &nbsp; </span>
                Mes inscriptions dans les temps collectifs
            </h2>
            <div class="panlecontainer">
                <table id="myReservationTable_id"  class="table table-striped table-hover">
                    <thead>
                        <tr style="text-align: center;">
                            {#<th>#ID</th>#}
                            <th>Temps collectif</th>
                            <th>Date d'inscripton</th>
                            <th>Activité </th>
                            <th>Lieu </th>
                            <th>Date </th>
                            <th>Validation par RAM</th><!--Validation par le service du RAM-->
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ins in myInscs  %}
                        <tr>
                            {#<th scope="row">{{  ins.id }}</th>#}
                            <td>{{ ins.tempsColl.nom }}</td>
                            <td>{{ ins.dateReservation|date('d/m/Y') }}</td>
                            <td>{{ ins.tempsColl.tcactivite != null ? ins.tempsColl.tcactivite.tcactivite : "" }} </td>
                            <td>{{ ins.tempsColl.lieu }}</td>
                            <td>{{ ins.tempsColl.date|date('d/m/Y') }}</td>
                            <td>{{ ins.typeValidation == 0 ? "En attente" : "Validée" }}</td>
                            <td>
                                <a href="{{path('tc_res_send_mail' , {'tcrid' : ins.id } ) }}" class="btnactions">
                                        <span class="fa-stack fa-lg" data-toggle="tooltip" data-placement="top" title="Recevoir les informations de ce temps collectifs sur mon mail.">
                                            <i class="fa fa-square-o fa-stack-2x"></i>
                                            <i class="fa fa-envelope fa-stack-1x"></i>
                                        </span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}